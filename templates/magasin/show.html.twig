{% extends "base.html.twig" %}

{% block body %}

	<div class="form-header text-center" style="background-image: url('{{ magasin.image }}'); background-position:center;">

		<h1 class="text-success">{{ magasin.nom }}</h1>
		<p>{{ magasin.description }}</p>
	</div>


	<div class="container">
		{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
			<h3 style="display: inline">Ajouter aux favoris :</h3>
			{% if favori is empty %}
				<i class="far fa-star" value="{{ magasin.id }}" name="favori" style="cursor: pointer"></i>
			{% else %}
				<i class="far fa-star fas" value="{{ magasin.id }}" name="favori" style="cursor: pointer"></i>
			{% endif %}
		{% endif %}
	</div>

	<div class="container">
		<section>
			<div class="row">
				<div class="col-10 mx-auto shadow p-3 mb-2 bg-light rounded">
					<h4 class="text-center">INFORMATIONS</h4>
					<div class="col-auto">
						<i class="fas fa-phone"></i>
						{{ magasin.tel }}
					</div>
					<div class="col-auto">
						<i class="fas fa-at"></i>
						{{ magasin.email }}
					</div>
				</div>
			</div>
		</section>

		<section>
			<div class="row">
				<div class="col-10 mx-auto p-3">
					<h4 class="p-3">PRODUITS EN VENTE</h4>
					<form class="form-inline my-2 my-lg-0">
						<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
					</form>
				</div>
			</div>
		</section>

		<section>
			<div class="row">
				<div class="col-10 mx-auto">
					<h4 class="p-3">ARTICLES POPULAIRES</h4>
				</div>
				{% if articlesPop %}
					{% for articlePop in articlesPop %}
						<a href="/article/{{ articlePop.id }}" class="col-5 shadow mx-auto p-3 mb-2 bg-light rounded">
							<div class="card-body">
								<h8 class="card-title">{{ articlePop.nom }}</h8>
								<div class="d-flex justify-content-between align-items-center">
									<small class="text-muted">{{ articlePop.prix }}€</small>
								</div>
							</div>
						</a>
					{% endfor %}
				{% else %}
					<h4 class="col-12 text-center text-warning">Pas d'articles populaires !</h4>
				{% endif %}

			</div>
		</section>

		<section>
			<div class="row">
				<div class="col-10 mx-auto">
					<h4 class="p-3">TOUS LES ARTICLES</h4>
				</div>
				{% if articles %}
					{% for article in articles %}
						<a href="/article/{{ article.id }}" class="col-10 mx-auto shadow p-3 mb-2 bg-light rounded">
							<div class="card-body">
								<h8 class="card-title">{{ article.nom }}</h8>
								<div class="d-flex justify-content-between align-items-center">
									<small class="text-muted">{{ article.prix }}€</small>
								</div>
							</div>
						</a>
					{% endfor %}
				{% else %}
					<h4 class="col-12 text-center text-warning">Pas d'articles disponibles !</h4>
				{% endif %}

			</div>
		</section>
	</div>
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('favmag') }}
{% endblock %}
