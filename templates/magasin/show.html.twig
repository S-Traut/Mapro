{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12" width="100%">
                <img src='{{ magasin.image }}'>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li>
                        {{ magasin.nom }}
                    </li>
                    <li>
                        {{ magasin.description }}
                    </li>
                    <li>
                        {{ magasin.tel }}
                    </li>
                    <li>
                        {{ magasin.email }}
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <p>PRODUITS EN VENTE</p>
            </div>
        </div>
        <div class="row">
            <p>ARTICLES POPULAIRES</p>
            {% for articlePop in articlesPop %}
                <div class="col-xs-6">
                    <div class="card-body">
                        <h8 class="card-title">{{ articlePop.nom }}</h8>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">{{ articlePop.prix }}€</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-xs-12">
                TOUS LES ARTICLES
                {% for article in articles %}
                    <div calss="card xs-12 shadow-sm">
                        <ul>
                            <li>
                                <div>
                                    <div class="card-body">
                                        <h8 class="card-title">{{ article.nom }}</h8>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">{{ article.prix }}€</small>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}