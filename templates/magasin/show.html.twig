{% extends "base.html.twig" %}

{% block body %}
    
    <div class="form-header">
		<div class="container">
            <div class="row">
                <div class="col-6">
                <h1>Mes magasins</h1>
			    <p>Créez, consultez et modifiez vos magasins</p>
                </div>
                <div class="col-6">
                    <img src="{{ magasin.image }}" alt="">
                </div>
            </div>
        </div>
	</div>
    


    <div class="container">
        <section>
            <div class="row"> 
                <div class="col-auto shadow p-3 mb-2 bg-light rounded">
                    <div class="col-auto">
                        <i class="fas fa-phone"></i> {{ magasin.tel }}
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-at"></i> {{ magasin.email }}
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="row">
                <div class="col-xs-12">
                    <h4>PRODUITS EN VENTE</h4>
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form> 
                </div>
            </div>
        </section>

        <section>
            <div class="row">
                <div class="col-12">  
                    <h4>ARTICLES POPULAIRES</h4>
                </div>
                {% for articlePop in articlesPop %}
                    <a href="/article/{{ articlePop.id }}" class="col-5 shadow p-3 mb-2 bg-light rounded">
                        <div class="card-body">
                            <h8 class="card-title">{{ articlePop.nom }}</h8>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">{{ articlePop.prix }}€</small>
                            </div>
                        </div>
                    </a>
                    <div class="col-1"></div>
                {% endfor %}
            </div>
        </section>
        
        <section>
            <div class="row">
                    <h4>TOUS LES ARTICLES</h4> 
                    {% for article in articles %}
                        <a href="/article/{{ article.id }}" class="col-12 shadow p-3 mb-2 bg-light rounded">
                            <div class="card-body">
                            <h8 class="card-title">{{ article.nom }}</h8>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">{{ article.prix }}€</small>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}