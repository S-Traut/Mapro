{% extends "base.html.twig" %}


{% block body %}
	<!-- module recherche -->
	{% include 'module/recherche.html.twig' %}

	<section id="content">

		{% for magasin in magasins %}

			<div class="card mb-3">
				<div class="row g-0">
					<div class="col-md-4">
						<img src="{{magasin.image}}" alt="..." style="width: 100%">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{ magasin.nom }}</h5>
							<p class="card-text">{{magasin.description}}</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}

	</section>


	<!-- grille catégories -->
	{% include 'module/categories.html.twig' %}


	<!-- grille des plus consultés -->
	{% include 'module/articlespop.html.twig' %}

{% endblock %}
