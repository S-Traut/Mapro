{% extends "base.html.twig" %}

{% block body %}


	<!-- barre de recherche -->
	{% include "module/recherche.html.twig" %}

	<!-- Résultat de recherche -->
	<div class="container">
		<div id="search-result" class="mb-5"></div>
	</div>

	<!-- grille catégories -->
	<div class="container">
		<section id="content">


			{% if donnees is empty and favoris is empty %}
				<div class="card m-5">
					<h2>Aucun résultat trouvé</h2>
				</div>
			{% else %}
				{% for favori in favoris %}
					<div class="card mb-3">
						<div class="row g-0">
							<div class="col-md-4">
								<img src="{{favori.image}}" alt="..." style="width: 100%">
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<div class="row">
										<div class="col-11">
											<h5 class="card-title">{{ favori.nom }}</h5>
										</div>
										<div class="col-1">
											{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
												<i class="far fa-star fas" value="{{ favori.id }}" name="favori" style="cursor: pointer"></i>
											{% endif %}
										</div>
									</div>
									<p class="card-text">{{favori.description}}</p>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
				{% for donnee in donnees %}
					<div class="card mb-3">
						<div class="row g-0">
							<div class="col-md-4">
								<img src="{{donnee.image}}" alt="..." style="width: 100%">
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<div class="row">
										<div class="col-11">
											<h5 class="card-title">{{ donnee.nom }}</h5>
										</div>
										<div class="col-1">
											{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
												<i class="far fa-star" value="{{ donnee.id }}" name="favori" style="cursor: pointer"></i>
											{% endif %}
										</div>
									</div>
									<p class="card-text">{{donnee.description}}</p>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endif %}

			<div class="pagination">
				{{ knp_pagination_render(magasins) }}
			</div>


		</section>
	</div>
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('search') }}
	{{ encore_entry_script_tags('favmag') }}
{% endblock %}
